<% comments.order("created_at desc").each do |comment| %>
  <div class="comment-user-details">
    <div>
      <span style="font-size: 12px"><%= capitalize_string(comment.user.full_name) %> | <%= formattedDateTime(comment.created_at) %></span>
    </div>
  </div>
  <p><%= capitalize_string(comment.content) %></p>
  <section class="reply-section">
    <% comment.replies.each do |reply| %>
      <div class="reply">
        <p><%= image_tag("reply.png", height: 20) %><%= image_tag(reply.user.avatar_url, height: 25) %><%= reply.content %></p>
      </div>
    <% end %>
  </section>
  <%= render partial: 'replies/form', locals: { comment: comment, reply: Reply.new } %>
<% end %>