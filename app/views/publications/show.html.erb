<%= render "shared/auth_navbar" %>

<section class="publication-details-section">
  <h2><b><%= @publication.title %></b></h2>
  <div class="publication-user-details">
    <div>
      <% if current_user && current_user == @publication.user %>
        <span><%= link_to capitalize_string(@publication.user.full_name), user_path(@publication.user) %> | <%= formattedDateTime(@publication.created_at) %> | <%= link_to "Edit", edit_publication_path %> | <%= link_to "Delete", publication_path(@publication), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %></span>
      <% else %>
        <span><%= link_to capitalize_string(@publication.user.full_name), user_path(@publication.user) %> | <%= formattedDateTime(@publication.created_at) %></span>
      <% end %>
    </div>
  </div>
  <hr>
  <b><h3>Abstract</h3></b>
  <p><%= @publication.abstract %></p>
  <br>
  <p><%= simple_format(@publication.content) %></p>
  <br>
  <%= render "comments/comment", publication: @publication %>
  <br>
  <%= render "comments/comments", comments: @publication.comments %>
</section>

<%= render "layouts/footer" %>