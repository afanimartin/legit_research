<%= render "shared/auth_navbar" %>

<section class="publication-details-section">
  <h2><b><%= @publication.title %></b></h2>
  <div class="publication-user-details">
    <%= image_tag(@publication.user.avatar_url) %>
    <div>
      <h4><%= capitalize_string(@publication.user.full_name) %><br>
      <span><%= formattedDateTime(@publication.created_at) %></span>
    </div>
  </div>
  <hr>
  <b><h3>Abstract</h3></b>
  <p><%= @publication.abstract %></p>
  <br>
  <br>
  <p><%= rich_text_display(@publication.content) %></p>
  <%= render "comments/comment", publication: @publication %>
  <br>
  <%= render "comments/comments", comments: @publication.comments %>
</section>

<%= render "layouts/footer" %>