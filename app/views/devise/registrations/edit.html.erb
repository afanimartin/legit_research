<%= render "shared/auth_navbar" %>

<section class="edit-account-section">
<h2>Complete Registration</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), multipart: true, html: { method: :put }) do |f| %>
  <div class="mb-3">
    <%= f.label :avatar, class: "form-label" %>
    <%= f.file_field :avatar, class: "form-control", direct_upload: true, required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :full_name, class: "form-label" %>
    <%= f.text_field :full_name, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :bio, class: "form-label" %>
    <%= f.text_area :bio, rows: 4, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :gender, class: "form-label" %>
    <%= f.select :gender, options_for_select(['Male', 'Female', 'Other'], @user.gender), prompt: 'Select gender', class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :date_of_birth, class: "form-label" %>
    <%= f.date_select :date_of_birth, start_year: Date.current.year - 100, end_year: Date.current.year, prompt: { day: 'Select day', month: 'Select month', year: 'Select year' }, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :current_password, class: "form-label" %>
    <%= f.password_field :current_password, class: "form-control", required: true %>
  </div>

  <div class="actions">
    <%= f.submit 'Complete registration' %>
  </div>  
<% end %>

</section>

<%= render "layouts/footer" %>